@{
    ViewBag.Title = "创建权限";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}

<h2>新增权限</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="form-group col-md-7">
                <div class="input-control has-icon-left">
                    <input name="Description" type="text" class="form-control" placeholder="权限描述">
                    <label class="input-control-icon-left"><i class="icon icon-bookmark "></i></label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="form-group col-md-7">
                <div class="input-control has-icon-left">
                    <input name="PermissionName" type="text" class="form-control" placeholder="权限名称">
                    <label class="input-control-icon-left"><i class="icon icon-info"></i></label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-6">
                <input type="submit" value="新增" class="btn btn-success" />
            </div>
        </div>
    </div>
}