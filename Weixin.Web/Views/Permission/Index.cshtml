@model IEnumerable<Weixin.DTO.PermissionDTO>

@{
    ViewBag.Title = "权限浏览";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}
<hr />
<div class="row">
    <div class="col-md-4">
        <a href="/Permission/Create" class="btn btn-success">新增</a>
    </div>
    <div class="col-md-8">
        <form action="/Permission/Search" method="post">
            <div class="row">
                <div class="form-inline">
                    <input type="text" placeholder="输入权限名搜索" name="permissionName" class="form-control" />
                    <input type="submit" value="搜索" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>
<hr />
<table class="table table-hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PermissionName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PermissionName)
            </td>
            <td>
                <a href="/Permission/Edit/@item.Id" class="btn btn-primary">编辑</a>
                <a id="del" href="/Permission/Delete/@item.Id" onclick="if(confirm('确定删除?')==false)return false;" class="btn btn-danger">删除</a>
            </td>
        </tr>
    }

</table>
@Html.Raw(@ViewBag.PageBar)