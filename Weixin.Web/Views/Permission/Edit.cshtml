@model Weixin.Web.Models.PermissionEditModel
@{
    ViewBag.Title = "编辑权限";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}

<h2>编辑权限</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<form class="form-horizontal" method="post">
    <hr />
    @Html.HiddenFor(model => model.PermissionId)
    @Html.HiddenFor(model => model.Referer)
    <div class="form-group col-md-7">
        <div class="input-control has-icon-left">
            <input name="PermissionName" type="text" class="form-control" value="@Model.PermissionName" placeholder="权限名称">
            <label class="input-control-icon-left"><i class="icon icon-info "></i></label>
        </div>
    </div>

    <div class="form-group col-md-7">
        <div class="input-control has-icon-left">
            <input name="Description" type="text" class="form-control" value="@Model.Description" placeholder="权限描述">
            <label class="input-control-icon-left"><i class="icon icon-bookmark"></i></label>
        </div>
    </div>

    <div class="form-group col-md-7">
        <div class="col-md-offset-10 col-md-4">
            <input type="submit" value="保存" class="btn btn-success" />
        </div>
    </div>
</form>

}

