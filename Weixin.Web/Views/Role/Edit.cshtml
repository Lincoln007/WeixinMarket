@model Weixin.Web.Models.RoleEditModel
@{
    ViewBag.Title = "创建角色";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}

<h2>编辑角色</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.HiddenFor(model=>model.Id)
    @Html.HiddenFor(model=>model.Referer)
    <div class="form-group">
        <div class="form-group col-md-7">
            <div class="input-control has-icon-left">
                <input name="RoleName" type="text" class="form-control" placeholder="角色名称" value="@Model.RoleName">
                <label class="input-control-icon-left"><i class="icon icon-group"></i></label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-6">
            <input type="submit" value="保存" class="btn btn-success" />
        </div>
    </div>
</div>
}