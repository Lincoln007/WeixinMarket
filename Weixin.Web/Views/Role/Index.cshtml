@model IEnumerable<Weixin.DTO.RoleDTO>

@{
    ViewBag.Title = "角色浏览";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <a href="/Role/Create" class="btn btn-success">新增</a>
    </div>
    <div class="col-md-8">
        <form action="/Role/Search" method="post">
            <div class="row">
                <div class="form-inline">
                    <input type="text" placeholder="输入角色名搜索" name="roleName" class="form-control" />
                    <input type="submit" value="搜索" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>
<hr />
<table class="table table-hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                <a href="/Role/Edit/@item.Id" class="btn btn-primary">编辑</a>
                <a id="del" href="/Role/Delete/@item.Id" onclick="if(confirm('确定删除?')==false)return false;" class="btn btn-danger">删除</a>
            </td>
        </tr>
    }

</table>
@Html.Raw(@ViewBag.PageBar)